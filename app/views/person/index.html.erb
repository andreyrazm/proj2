<%= form_tag person_index_path,class: 'form-inline', role: 'form', remote: true, method: 'get', id: 'persons_search' do %>
    <%= hidden_field_tag :direction, params[:direction]%>
    <%= hidden_field_tag :sort, params[:sort] %>
    <div class="form-group">
      <label>Имя</label><br>

      <%= text_field_tag :search, params[:search], class:'form-control' %>
    </div>
    <div class="form-group">
      <label>WMID</label><br>
      <%= text_field_tag :wmid, params[:wmid], class:'form-control'  %>
    </div>
    <div class="form-group">
      <label>Бизнес уровень</label><br>
      <%= text_field_tag :lvl1, params[:lvl1], class:'form-control', style: 'width  :70px'  %>
      <%= text_field_tag :lvl2, params[:lvl2], class:'form-control', style: 'width  :70px'  %>
    </div>
    <div class="form-group">
      <label>Тип аттестата</label><br>
      <select name="att" id="att" class="form-control"%>">
        <option value="0">Все аттестаты</option>
        <% @att.each do |a| %>
            <option value="<%= a.id %>"><%= a.attname %></option>
        <%end%>
      </select>
    </div>
    <div class="form-group"><br>
      <span class="glyphicon glyphicon-search"></span>
      <%= submit_tag 'Поиск', name: nil, class: 'btn btn-default' %>
    </div>


<% end %>
<p>
<%= form_tag person_index_path, class: 'form-inline', role: 'form', remote: true, method:'get', id: 'persons_new' do %>
      <label>WMID или Кошелёк</label><br>
      <%= text_field_tag :new, nil , class: 'form-control'  %>
    <%= submit_tag 'Добавить', name: nil, class: 'btn btn-default', id:'new_button'  %>
<% end %>
<br>



<div id="persons"><%=render 'persons'%></div>
